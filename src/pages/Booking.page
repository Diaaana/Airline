        for (var j = 0; j <= 3; j++) {
            var td = document.createElement('td');
            td.innerHTML = j;
            tr.appendChild(td);
        }
        table.appendChild(tr);
    }*/
}
</script>

<apex:actionFunction name="giveParameters" action="{!searchFlights}" reRender="view">
<apex:param id="flight" name="flight" value="" /> 
<apex:param id="addon" name="addon" value="" />
<apex:param id="dateFrom" name="dateFrom" value="" />
<apex:param id="dateTo" name="dateTo" value="" />
</apex:actionFunction>
</apex:form>

</apex:page>